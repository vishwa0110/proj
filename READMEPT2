    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            String q,m,name,uname,pass,age,sex,forgor;
            Connection con;
            name=TF1.getText();
            age=TF2.getText();
            sex=TF3.getText();
            uname=TF4.getText();
            pass=PF1.getText();
            forgor=PF2.getText();
            Class.forName("com.mysql.cj.jdbc.Driver");
            con=DriverManager.getConnection("jdbc:mysql://localhost:3306/loginh?zeroDateTimeBehavior=CONVERT_TO_NULL","root","mysql");
            Statement st=con.createStatement();
            m="insert into signup values('"+name+"','"+age+"','"+sex+"','"+uname+"','"+pass+"','"+forgor+"');";
            q="insert into login values('"+uname+"','"+pass+"','"+forgor+"');";
            st.executeUpdate(m);
            st.executeUpdate(q);
            JOptionPane.showMessageDialog(this,"Saved");
            TF1.setText("");
            TF2.setText("");
            TF3.setText("");
            TF4.setText("");
            PF1.setText("");
            PF2.setText("");}

        catch (Exception n) {
            JOptionPane.showMessageDialog(this,"username already taken");
            TF1.setText("");
            TF2.setText("");
            TF3.setText("");
            TF4.setText("");
            PF1.setText("");
            PF2.setText("");
        }

    }                                        

